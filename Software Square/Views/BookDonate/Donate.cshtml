@model Software_Square.Models.bookDonate

@{
	ViewData["Title"] = "Donate";
}

<h1>Donate</h1>

<h4>BookDonated</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Donate" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			 <input asp-for="Id" class="form-control" type="hidden" />
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="book" class="control-label"></label>
				<input asp-for="book" name="book" class="form-control" type="file"/>
				<span asp-validation-for="book" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Books">Back to List</a>
</div>

